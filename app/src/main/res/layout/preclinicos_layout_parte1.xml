<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_button_enviar_selector"
        android:text="@string/boton_enviar"
        android:textColor="@android:color/white"
        android:onClick="onClick_btnEnviar"
        />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/btnEnviar"
        android:background="@drawable/bg_button_cancel_selector"
        android:text="@string/boton_Cancel"
        android:textColor="@android:color/white"
        android:onClick="onClick_btnCancel"
        />

    <Button
        android:id="@+id/btnNoAtiendeLlamado"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/btnCancel"
        android:background="@drawable/bg_button_na_llamado_selector"
        android:text="@string/boton_no_atiente_llamado"
        android:textColor="@android:color/white"
        android:onClick="onClick_btnNoAtiendeLlamado"

        />

</RelativeLayout>