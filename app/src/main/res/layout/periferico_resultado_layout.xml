<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">


    <TextView
        android:id="@+id/txtvPerifericoResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:textAppearance="@style/TextoTituloEstilo"
        android:text="@string/title_periferico_resultado"
        />

        <Button
            android:id="@+id/btnSalirPR"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/txtvPerifericoResult"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="400dp"
            android:background="@drawable/bg_button_cancel_selector"
            android:text="@string/boton_salir"
            android:onClick="onClick_btnRegreso"
            />

    <TextView
        android:id="@+id/txtvSerieRoja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/txtvPerifericoResult"
        android:text="@string/label_serie_roja"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtvResultadoPeriferico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="160dp"
        android:layout_below="@+id/txtvPerifericoResult"
        android:layout_toRightOf="@+id/txtvSerieRoja"
        android:text="@string/label_resultado_malaria"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtvAnisocitosis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/txtvSerieRoja"
        android:text="@string/label_anisocitosis"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edtxtAnisocitosis"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/txtvResultadoPeriferico"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@+id/txtvAnisocitosis"
        android:enabled="false"
        style="@style/EditTextEstilo"
        />

    <TextView
        android:id="@+id/txtvAnisocromia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/txtvAnisocitosis"
        android:text="@string/label_anisocromia"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edtxtAnisocromia"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/edtxtAnisocitosis"
        android:layout_marginLeft="78dp"
        android:layout_toRightOf="@+id/txtvAnisocromia"
        android:enabled="false"
        style="@style/EditTextEstilo"
        />

    <TextView
        android:id="@+id/txtvPoiquilicitosis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/txtvAnisocromia"
        android:text="@string/label_poiquilocitosis"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edtxtPoiquilicitosis"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/edtxtAnisocromia"
        android:layout_marginLeft="62dp"
        android:layout_toRightOf="@+id/txtvPoiquilicitosis"
        android:enabled="false"
        style="@style/EditTextEstilo"
        />

    <TextView
        android:id="@+id/txtvSerieBlanca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/txtvPoiquilicitosis"
        android:text="@string/label_serie_blanca"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtvLinfositosAtipicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/txtvSerieBlanca"
        android:text="@string/label_linfositos_atipicos"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edtxtLinfositosAtipicos"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/txtvSerieBlanca"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@+id/txtvLinfositosAtipicos"
        android:enabled="false"
        style="@style/EditTextEstilo"
        />

    <TextView
        android:id="@+id/txtvObservacionesSB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/txtvLinfositosAtipicos"
        android:text="@string/label_observaciones_examenes"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edtxtObservacionesSB"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/edtxtLinfositosAtipicos"
        android:layout_marginLeft="64dp"
        android:layout_toRightOf="@+id/txtvObservacionesSB"
        android:enabled="false"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        style="@style/EditTextEstilo"
        />

    <TextView
        android:id="@+id/txtvImpresionPlaquetaria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/txtvObservacionesSB"
        android:text="@string/label_impresion_plaquetaria"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtvObservacionesIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/txtvImpresionPlaquetaria"
        android:text="@string/label_observaciones_examenes"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edtxtObservacionesIP"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/txtvImpresionPlaquetaria"
        android:layout_marginLeft="64dp"
        android:layout_toRightOf="@+id/txtvObservacionesIP"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:enabled="false"
        style="@style/EditTextEstilo"
        />

    </RelativeLayout>

</ScrollView>