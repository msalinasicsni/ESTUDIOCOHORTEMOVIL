<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:focusable="true" android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/txtvTituloDiagnostico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextoTituloEstilo"
            android:text="@string/title_tab_diagnostico_consulta"
            />

        <ImageButton
            android:id="@+id/ibtVisorDiagnostico"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/viewdoc"
            />

        <TextView
            android:id="@+id/txtvNombreApellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtvTituloDiagnostico"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="20dp"
            android:text="@string/label_nombre_apellido"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />

        <EditText
            android:id="@+id/edtxNombrePaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtvNombreApellido"
            android:layout_below="@+id/txtvTituloDiagnostico"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="7dp"
            android:paddingLeft="14dp"
            style="@style/EditTextEstilo"
            android:textColor="@color/color_texto_deshabilitado"
            android:textSize="16sp"
            android:enabled="false"
            android:ems="10"

            />

        <TextView
            android:id="@+id/txtvEstudiosParticipante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtvNombreApellido"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="20dp"
            android:text="@string/label_estudio_participante"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />

        <EditText
            android:id="@+id/edtxEstudioParticipanteD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtvEstudiosParticipante"
            android:layout_below="@+id/edtxNombrePaciente"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="7dp"
            android:paddingLeft="14dp"
            style="@style/EditTextEstilo"
            android:textColor="@color/color_texto_deshabilitado"
            android:textSize="16sp"
            android:enabled="false"
            android:ems="10"

            />

        <TextView
            android:id="@+id/txtvCodigoSintomaD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtvEstudiosParticipante"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="20dp"
            android:text="@string/label_codigo"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />

        <EditText
            android:id="@+id/edtxCodigoSintomaD"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtvCodigoSintomaD"
            android:layout_below="@+id/txtvEstudiosParticipante"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="7dp"
            android:paddingLeft="14dp"
            style="@style/EditTextEstilo"
            android:textColor="@color/color_texto_deshabilitado"
            android:textSize="16sp"
            android:enabled="false"
            android:ems="10"

            />

        <TextView
            android:id="@+id/txtvFechaSintomaD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtvEstudiosParticipante"
            android:layout_toRightOf="@+id/edtxCodigoSintomaD"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="17dp"
            android:text="@string/label_fecha"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />

        <EditText
            android:id="@+id/edtxtFechaSintomaD"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtvFechaSintomaD"
            android:layout_below="@+id/txtvEstudiosParticipante"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="8dp"
            android:paddingLeft="14dp"
            style="@style/EditTextEstilo"
            android:inputType="date"
            android:enabled="false"
            android:ems="10"
            android:textColor="@color/color_texto_deshabilitado"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/txtvHoraSintomaD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtvEstudiosParticipante"
            android:layout_toRightOf="@+id/edtxtFechaSintomaD"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="25dp"
            android:text="@string/label_hora"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />

        <EditText
            android:id="@+id/edtxtHoraSintomaD"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtvHoraSintomaD"
            android:layout_below="@+id/txtvEstudiosParticipante"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="7dp"
            android:paddingLeft="14dp"
            style="@style/EditTextEstilo"
            android:inputType="date"
            android:enabled="false"
            android:ems="10"
            android:textColor="@color/color_texto_deshabilitado"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/txtvExpendienteSintomaD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtvEstudiosParticipante"
            android:layout_toRightOf="@+id/edtxtHoraSintomaD"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="25dp"
            android:text="@string/label_expediente"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />

        <EditText
            android:id="@+id/edtxtExpedienteSintomaD"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtvExpendienteSintomaD"
            android:layout_below="@+id/txtvEstudiosParticipante"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="7dp"
            android:paddingLeft="12dp"
            style="@style/EditTextEstilo"
            android:inputType="date"
            android:enabled="false"
            android:ems="10"
            android:textColor="@color/color_texto_deshabilitado"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/txtvEdadSintomaD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtvCodigoSintomaD"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="20dp"
            android:text="@string/label_edad"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />

        <EditText
            android:id="@+id/edtxtEdadSintomaD"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtvEdadSintomaD"
            android:layout_below="@+id/txtvCodigoSintomaD"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:paddingLeft="14dp"
            style="@style/EditTextEstilo"
            android:inputType="date"
            android:enabled="false"
            android:ems="10"
            android:textColor="@color/color_texto_deshabilitado"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/txtvSexoSintomaD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtvCodigoSintomaD"
            android:layout_toRightOf="@+id/edtxtEdadSintomaD"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="7dp"
            android:text="@string/label_sexo"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />

        <EditText
            android:id="@+id/edtxtSexoSintomaD"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtvSexoSintomaD"
            android:layout_below="@+id/txtvCodigoSintomaD"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="8dp"
            android:paddingLeft="25dp"
            style="@style/EditTextEstilo"
            android:inputType="date"
            android:enabled="false"
            android:ems="10"
            android:textColor="@color/color_texto_deshabilitado"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/txtvPesoKgSintomaD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/edtxtSexoSintomaD"
            android:layout_below="@+id/txtvCodigoSintomaD"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="10dp"
            android:text="@string/label_peso"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />

        <EditText
            android:id="@+id/edtxtPesoKgSintomaD"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtvPesoKgSintomaD"
            android:layout_below="@+id/txtvCodigoSintomaD"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="7dp"
            android:paddingLeft="14dp"
            style="@style/EditTextEstilo"
            android:inputType="date"
            android:enabled="false"
            android:ems="10"
            android:textColor="@color/color_texto_deshabilitado"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/txtvTallaCmSintomaD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtvCodigoSintomaD"
            android:layout_toRightOf="@+id/edtxtPesoKgSintomaD"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="5dp"
            android:text="@string/label_talla"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />

        <EditText
            android:id="@+id/edtxtTallaCmSintomaD"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtvTallaCmSintomaD"
            android:layout_below="@+id/txtvCodigoSintomaD"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="7dp"
            android:paddingLeft="14dp"
            style="@style/EditTextEstilo"
            android:inputType="date"
            android:enabled="false"
            android:ems="10"
            android:textColor="@color/color_texto_deshabilitado"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/txtvTempCSintomaD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtvCodigoSintomaD"
            android:layout_toRightOf="@+id/edtxtTallaCmSintomaD"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="5dp"
            android:text="@string/label_temp"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />

        <EditText
            android:id="@+id/edtxtTempCSintomaD"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtvTempCSintomaD"
            android:layout_below="@+id/txtvCodigoSintomaD"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="7dp"
            android:paddingLeft="14dp"
            style="@style/EditTextEstilo"
            android:inputType="date"
            android:enabled="false"
            android:ems="10"
            android:textColor="@color/color_texto_deshabilitado"
            android:textSize="16sp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:text="@string/boton_diagnostico_HistoriaExamenFisico"
            android:id="@+id/btndianosticoHistExamenFisico"
            android:layout_alignTop="@+id/edtxtTempCSintomaD"
android:drawableRight="@drawable/expandir"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="45dp"
            android:text="@string/boton_diagnostico_Tratamiento"
            android:id="@+id/btndianosticotratamiento"
            android:layout_alignTop="@+id/btndianosticoHistExamenFisico"
            android:drawableRight="@drawable/expandir"

            />
        <!--<Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="45dp"
            android:text="@string/boton_diagnostico_Planes"
            android:id="@+id/btndianosticoplanes"
            android:layout_alignTop="@+id/btndianosticotratamiento"
            android:drawableRight="@drawable/expandir"
            />-->
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="45dp"
            android:text="@string/boton_diagnostico_diagnostico"
            android:id="@+id/btndianosticodiag"
            android:layout_alignTop="@+id/btndianosticotratamiento"
            android:drawableRight="@drawable/expandir"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="45dp"
            android:text="@string/boton_diagnostico_proximacita"
            android:id="@+id/btndianosticoproxcita"
            android:layout_alignTop="@+id/btndianosticodiag"
            android:drawableRight="@drawable/expandir"
            />


    </RelativeLayout>
</ScrollView>